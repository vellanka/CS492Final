<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FishDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detail_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fish_name"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline4" />

        <TextView
            android:layout_below="@id/fish_name"
            android:paddingLeft="4dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/scientific_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2" />

        <TextView
            android:layout_below="@id/scientific_name"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:id="@+id/background_color"

            />


        <ImageView
            android:layout_below="@id/background_color"
            android:id ="@+id/source_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:contentDescription="@string/source_image_description"
            android:padding="16dp"
            />


        <TextView
            android:layout_below="@+id/source_image"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />



        <TextView
            android:layout_below="@id/population"
            android:paddingTop="16dp"
            android:id="@+id/fishingRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:layout_below="@id/fishingRate"
            android:paddingTop="16dp"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1" />


    </RelativeLayout>

    </ScrollView>

</LinearLayout>